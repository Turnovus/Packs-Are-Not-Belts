        <operation Class="PatchOperationSequence">
            <operations>

                <li Class="PatchOperationReplace">
                    <xpath>Defs/ThingDef[defName="VAEA_Apparel_Quiver"]/apparel/layers</xpath>
                    <value>
                        <layers>
                            <li>PacksAreNotBelts_Tactical</li>
                        </layers>
                    </value>
                </li>

                <li Class="PatchOperationReplace">
                    <xpath>Defs/ThingDef[defName="VAEA_Apparel_AmmoPack"]/apparel/layers</xpath>
                    <value>
                        <layers>
                            <li>PacksAreNotBelts_Tactical</li>
                        </layers>
                    </value>
                </li>

            </operations>
        </operation>
    </Operation>

</Patch>